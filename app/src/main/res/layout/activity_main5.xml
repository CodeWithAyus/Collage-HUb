<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity5">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/signinback"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/weltx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weltech"
        android:layout_centerHorizontal="true"
        android:background="#FFEB3B"
        android:textColor="@color/black"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40dp"
        />

    <TextView
        android:id="@+id/enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teacher ID"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/weltx"
        android:textSize="20dp"
        android:layout_marginTop="20sp"
        />

    <EditText
        android:id="@+id/textviewof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" Enter here"
        android:layout_marginTop="45dp"
        android:textColor="@color/black"
        android:layout_below="@+id/weltx"
        android:textSize="20sp"
        android:background="@drawable/rec"
        android:ems="14"
        android:autofillHints="emailAddress"
        android:textColorHint="@color/black"
        android:layout_centerHorizontal="true"

        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pass"
        android:layout_marginTop="10dp"
        android:src="@drawable/reset_password" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textviewof"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/passbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter here"
      android:background="@drawable/rec"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:layout_below="@+id/pass"
        android:textSize="20sp"
        android:ems="14"
        android:password="true"
        android:autofillHints="password"
        android:textColorHint="@color/black"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/happy"
        android:layout_alignRight="@id/passbtn"
        android:layout_marginTop="10dp"
        android:layout_below="@id/pass"
        android:clickable="true"

/>

    <TextView
        android:id="@+id/con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20dp"
      android:layout_below="@id/passbtn"
        android:layout_marginTop="10sp"
        />

    <EditText
        android:id="@+id/passbtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" Contact"
        android:inputType="phone"
        android:background="@drawable/rec"
        android:autofillHints="phone"
        android:textColor="@color/black"
        android:layout_below="@+id/con"
        android:textSize="20sp"
        android:ems="14"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/con"
        android:layout_marginTop="10dp"
        android:src="@drawable/b"
        />
    <TextView
        android:id="@+id/dep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passbtn3"
        android:textSize="20dp"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/passbtn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter here"
        android:inputType="textCapCharacters"
        android:background="@drawable/rec"
           android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@+id/dep"
        android:ems="14"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@+id/passbtn5"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:contextClickable="true"
        android:fontFamily="serif"
        android:backgroundTint="#B2DFDB"
       />

</RelativeLayout>